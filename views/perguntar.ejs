<div class="container p-5">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Realizar perguntas</h3>
        </div>
        <div class="card-body">
            <form action="/saveFormQuestion" method="post">
                <label for="title">Título:</label>
                <input id="title" name="title" type="text" class="form-control mb-4" />
                <label for="question">Dúvida:</label>
                <textarea name="question" id="question" cols="30" rows="5" class="form-control mb-3"></textarea>
                <button class="btn btn-success" type="submit">Enviar</button>
            </form>
        </div>
    </div>
</div>
